{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <h3 class="mt-5 mb-5">Update Form</h3>
            {% for message in app.flashes('notice') %} <!-- Displaying flash with notice-->
                <div class="alert alert-success">
                        {{ message }}
                </div>
            {% endfor %}
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                    <div>
                        {{ form_widget(form.username, {'attr':{'class':'form-control','placeholder':'Name'}}) }}
                    </div>

                    <div>
                        {{ form_widget(form.contact, {'attr':{'class':'form-control','placeholder':'Contact'}}) }}
                    </div>

                    <div>
                        {{ form_widget(form.submit, {'attr':{'class':'btn btn-info mt-2 text-white'}}) }}
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}